<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :format %>
    <%= f.select :format, Book.formats %>
  </div>

  <div class="field">
    <%= f.label :publisher %>
    <%= f.text_field :publisher %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="ressources" data-namespace="book">
    <div class="ressources__fields">
      <%= f.fields_for :ressources, book.ressources do |fr| %>
        <div class="ressources__field" data-index="<%= fr.index %>">

          <%= fr.file_field :file %>
          <%= fr.label :name %>
          <%= fr.text_field :name %>
  
          <!-- Onclick, pass _destroy to 1  -->
          <%= fr.hidden_field :_destroy, :class => 'removable' %>
          <%= fr.hidden_field :id %>
          <button class="ressources__field-remove">Remove Child</button>

        </div>
      <% end %>
    </div>

    <button class="ressources__add">Ajouter</button>

  </div>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
