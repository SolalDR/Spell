
<div class="book">

  <%= link_to "X", book_marks_path, class: "book__close-btn" %>

  <div class="book__container">
    <h1 class="book__title"><%= @book.title %></h1>
    <div class="book__specs">
      <p class="book__spec"><%= @book.author %></p>
      <p class="book__spec">A partir de <%= @book.age %> ans</p>
      <p class="book__spec"><%= @book.publisher %></p>
      <p class="book__spec">DurÃ©e: 15min</p>
    </div>
    <div class="book__description">
      <%= @book.description %>
    </div>
    <div class="book__actions">
      <%= link_to "Lancer l'histoire", root_path, class: "btn" %>
    </div>
  </div>
</div>

<% if current_user && current_user.admin? %>
<div class="adminbar">
  <%= link_to 'Edit', edit_book_path(@book), class: "adminbar__item" %>
  <%= link_to 'New Fragment', new_book_fragment_path(:book_id => @book), class: "adminbar__item" %>
</div>
<% end %>
