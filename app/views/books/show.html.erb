<div class="book" style="background-image: url('<%= @book.cover.url %>')">

  <div class="book__container">
    <div class="container">
      <%= link_to book_marks_path, class: "book__close-btn" do  %>
      <i class="material-icons">close</i>
      <% end %>
      <h1 class="book__title title-1 container__title"><%= @book.title %></h1>
      <div class="book__specs">
        <p class="book__spec"><%= @book.author %></p>
        <p class="book__spec">A partir de <%= @book.age %> ans</p>
        <p class="book__spec"><%= @book.publisher %></p>
        <p class="book__spec">Durée: 15min</p>
      </div>
      <div class="book__description">
        <%= @book.description %>
      </div>
      <div class="book__actions">
        <% if @book_mark %>
          <%= link_to "Commencez l'aventure", read_path(id: @book), class: "btn btn--slide" %>
        <% else %>
          <%= link_to "Ajouter à ma bibliothèque", add_book_mark_path(id: @book.id), class: "btn btn--slide" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if current_user && current_user.admin? %>
<div class="adminbar">
  <%= link_to 'Edit', edit_book_path(@book), class: "adminbar__item" %>
  <%= link_to 'Liste de fragments', book_fragments_path(@book), class: "adminbar__item" %>
</div>
<% end %>
