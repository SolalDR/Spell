<!DOCTYPE html>
<html>
  <head>
    <title>Spell</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header class="header">
      <div class="container">
         <nav class="header__nav header__nav--left">
          <h1 class="header__brand header__brand--center">
          <%= link_to root_path do %>
            <%= image_tag "logo-horizontal.svg" %>
          <% end %>
          </h1>
                      
          <ul class="header__menu">
            <li class="header__menu-item">
              <%= link_to "A propos", root_path %>
            </li>
            <li class="header__menu-item">
              <%= link_to "L'équipe", team_path %>
            </li>
            <li class="header__menu-item">
              <%= link_to "Le Magasin", store_path %>
            </li>
          </ul>
        </nav>

        <nav class="header__nav header__nav--right">
          
          <ul class="header__menu">
            
            <% if current_user.nil? %>

              <li class="header__menu-item">
                <%= link_to "Connexion", new_user_session_path %>
              </li>
              <li class="header__menu-item">
                <%= link_to "Inscription", new_user_registration_path %>
              </li>

            <% else %>

              <nav class="header__nav header__nav--right">
                <ul class="header__menu">
                  <li class="header__menu-item">
                    <%= link_to "Ma Bibliothèque", book_marks_path %>
                  </li>
                  <li class="header__menu-item">
                    <a href="#" class="header__drop-btn">Mon Compte</a>
                    <div class="header__drop header__drop--close">
                      <%= link_to "Paramètre du compte", edit_user_registration_path, class: "header__drop-item" %>
                      <%= link_to "Déconnexion", destroy_user_session_path, :method => "delete", class: "header__drop-item" %>
                    </div>
                  </li>
                </ul>
              </nav>
              
            <% end %>

          </ul>
          
        </nav>       
      </div>
  </header>

  <div class="notifications">
    <% if notice %>
    <p class="notification"><%= notice %></p>
    <% end %>
  </div>
  
  <main class="main">
    <%= yield %>
  </main>

  </body>
</html>
