<!DOCTYPE html>
<html>
  <head>
    <title>Spell</title>
    <%= csrf_meta_tags %>
    
    <%= javascript_pack_tag 'application' %>
    <%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <header id="header-top-main" class="header header--wheel-sensitive">
      <div class="container">
        <nav class="header__nav header__nav--left">
          <%= link_to root_path, class: "smoothout" do %>
          <h1 class="header__brand header__brand--left">
            <%= image_tag "logo-horizontal.svg" %>
          </h1>
          <% end %>
        </nav>
      
        <nav class="header__nav header__nav--right">
          <ul class="header__menu">
            <li class="header__menu-item">
              <%= link_to "Ma Bibliothèque", book_marks_path, class: "smoothout" %>
            </li>
            <li class="header__menu-item">
              <a href="#" class="header__drop-btn">Mon Compte</a>
              <div class="header__drop header__drop--close">
                <%= link_to "Paramètres du compte", edit_user_registration_path, class: "header__drop-item smoothout" %>
                <%= link_to "Déconnexion", destroy_user_session_path, :method => "delete", class: "header__drop-item smoothout" %>
              </div>
            </li>
          </ul>
        </nav>
      </div>
  </header>

  <div class="notifications">
    <% if notice %>
    <p class="notification"><%= notice %></p>
    <% end %>
  </div>
    
  <main class="main">
    <%= yield %>  
  </main>
  
  
  </body>
</html>
