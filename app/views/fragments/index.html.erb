
<div class="container mt-4">
  <h1 class="title-1 container__title">Fragments</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Img</th>
        <th>Name</th>
        <th>Config</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @fragments.each do |fragment| %>
        <tr>
          <td><%= image_tag fragment.thumbnail, class: "img--small" %></td>
          <td><%= fragment.name %></td>
          <td><%= link_to 'Show', fragment %></td>
          <td><%= link_to 'Edit', edit_book_fragment_path(book_id: fragment.book, id: fragment) %></td>
          <td><%= link_to 'Destroy', fragment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
    
</div>


