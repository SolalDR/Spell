<div class="container devise-container">
  <div class="row">
    <div class="mx-auto devise">
     <h2>Edition mon profil</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <%= f.label :email %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.label :password %>
          <i>(Laisser vide si vous ne voulez pas le changer)</i>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <%= f.label :password_confirmation %>
        </div>

        <div class="field">
          <%= f.password_field :current_password, autocomplete: "off" %>
          <%= f.label :current_password %> 
          <i>(Mot de passe actuel pour confirmer)</i>
        </div>

        <div class="actions text-right">
          <%= f.submit "Mettre à jour" %>
        </div>
      <% end %>

      <div class="text-right">
         <p><%= button_to "Annuler mon compte", registration_path(resource_name), data: { confirm: "Vous êtes sur ?" }, method: :delete %></p>

          <%= link_to "Retour", :back, class:"btn " %>
      </div>
     
 
    </div>
  </div>
</div>
